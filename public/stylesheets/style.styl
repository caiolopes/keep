body
  background-image url("../images/bgMain.jpg") !important
  background-attachment fixed
  background-size 100%
*
  box-sizing border-box
#tarjeta
	background-color #272822
#pizarron
	background rgb(51, 76, 47) url("../images/tools.png")
	background-repeat no-repeat
	background-position-x 0px
	background-origin content-box
	background-position-y 3.1em
	font-family 'Lato', sans-serif
	font-size 4em
	height 5em
	padding 0.2em
	color white
	border-bottom 0.2em solid rgb(117, 90, 45)
	margin-top 1em
#form-login
  p
    color black
    display block
    width 100%
    text-align center
    margin 15px 0px
    font-size 20px
  input[type="text"]
    color #222
    padding 10px
#send-q
  background-color rgb(183, 205, 68) !important
  font-weight bold
  color #1f1f1f
  margin-top 0.5em
a
  color  #00B7FF
  text-decoration  none
#sign-in
	margin-top 10px
	float left
.user
	padding 10px
	text-align  center
	width 100%
	margin-top 10px
	font-size 1.2em

#people-connected
	padding 0px
	margin 0px
	list-style none
	margin-top 10px
	float left

#people-connected li
	padding 10px
	border-radius 3px
	background-color #ae81ff
	color white
	display inline-block
	margin 2px 2px
.vcard ul li
	color white
.nickname
	color #a6e22c
.nombre
	color #e6db67
.email
	color #66d9ef
#enter
	text-align center
	padding 10px
	font-weight bold
	border 0px
	background-color #6bcff3
	color white  
	width 100%
	font-size 2em
	margin-top 10px
	box-shadow 5px 5px 1px #50adce
#enter
  &:hover
  	background-color #50adce
  	cursor pointer
  	box-shadow 5px 5px 1px #6bcff3
#welcome-screen
  text-align center
  color #222
  img
    border-radius 50%
    border 4px solid #222
#login
	width 20%
	margin auto
	padding-top 100px
  text-align center
#login img
	width 100%
	margin-bottom 15px
#logout
  position absolute
  right 10px
  top 10px
  background black
  color white
  padding 5px
  &:hover
      background-color #222
#login span
	width 100%
	float left
	margin-bottom 10px
	font-weight bold
	text-shadow 1px 1px 1px #000
#wrap-content
	width 80%
	margin auto
	color white
	-webkit-transitionall linear 1s
	transition all linear 1s

#iframeloco
	width 100%
	height 100%;
