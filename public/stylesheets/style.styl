$blackboard = rgb(32, 111, 56)
body
  background-image url("../images/bgMain.jpg") !important
  background-attachment fixed
  background-size 100%
*
  box-sizing border-box
#wrap-content
  width 80%
  max-width 1200px
  margin 0 auto
.nice-input
  width 100%
  padding 15px
  background-color #f9f9f9
  text-align center
  color #222
  border 1px solid #333
  outline none
  &:hover
    background-color whitesmoke
.nice-button
  background: rgb(1, 213, 249)
  padding: 10px
  width: 100%
  border: 0
  box-shadow: 3px 3px 0px rgb(1, 175, 205)
  color: white
  font-size: 35px
  margin: 15px 0px
  &:hover
    background-color rgb(1, 175, 205)
    box-shadow: 3px 3px 0px rgb(1, 213, 249)
#logout
  position absolute
  right 10px
  top 10px
  padding 10px
  background-color #1f1f1f
  color white
#profile-img
  border-radius 50%
  border 3px solid rgb(255, 0, 30)
.transition
  -webkit-transition all 0.4s linear
  -moz-transition all 0.4s linear
  -o-transition all 0.4s linear
  transition all 0.4s linear
#login
  width 300px
  margin 0 auto
  padding-top 50px
  img
    width 100%
  #form-login
    p
      text-align center
      font-size 20px
      margin 5px 0px
#welcome-screen
  padding-top 50px
  h1
    color rgb(103, 103, 103)
    margin 0px 0px 15px 0px
    font-size 20px
    strong
        color black
        width 100%
        display block
        font-size 25px
#new-comment
  padding 10px
  width 100%
  height 100%
  position absolute
  background black
  text-align center
  input[type="submit"]
    width 30%
    padding 30px
    margin-top 10px
    font-size 30px
    outline none
    &:hover
      outline none
      background-color whitesmoke
      border 0px
  a
    color white
    font-size 20px
    margin-left 10px
    text-decoration none
  textarea
    border 3px solid rgba(214, 125, 42, 1)
    width 100%
    height 300px
    resize none
    color whitesmoke
    font-size 50px
    padding 40px
    font-family: 'Indie Flower', cursive
    background $blackboard url("../images/tools.png")
    background-position:right bottom
    background-repeat no-repeat
@media (max-width: 500px)
  #login
    width 100%
    padding 0 15px
    text-align center
    .logo-keep
      margin 5px auto
      width 90%
  #new-comment
    input[type="submit"]
      width 100%
      margin-bottom 20px
    a
      display block
      width 100%
